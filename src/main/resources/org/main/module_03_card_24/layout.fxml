            <Button fx:id="hintBtn" mnemonicParsing="false" onAction="#showHint" prefHeight="20.0" prefWidth="70.0" text="Hint">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding></Button>
            <Button fx:id="refreshBtn" mnemonicParsing="false" onAction="#refreshCards" prefHeight="20.0" prefWidth="70.0" text="Refresh">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding></Button>
         </children>
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
      <HBox alignment="CENTER" prefHeight="266.0" prefWidth="800.0">
         <children>
            <ImageView fx:id="card01" fitHeight="241.0" fitWidth="207.0" pickOnBounds="true" preserveRatio="true" />
            <ImageView fx:id="card02" fitHeight="240.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
            <ImageView fx:id="card03" fitHeight="241.0" fitWidth="203.0" pickOnBounds="true" preserveRatio="true" />
            <ImageView fx:id="card04" fitHeight="241.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
         </children>
      </HBox>
